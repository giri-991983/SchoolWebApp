@section PageScripts
{
@* <script src="~/js/institution-crud.dist.js"></script> *@
    <script src="~/code_js/managecampus.js"></script>
}

@if (Model?.Campuses != null && Model.Campuses.Any())
{
    var serial = 0;
    <div class="card">
        <div class="card-header pb-0">
            <h5 class="card-title mb-0">Manage Campus</h5>
        </div>
        <div class="card-datatable table-responsive">
            <table id="CampusTable" class="table">
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Campus Name</th>
                        <th>Zone</th>
                        <th>Institution</th>
                        <th>Affiliation No</th>
                        <th>School Code</th>
                        <th>Campus Type</th> 
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Campuses)
                    {
                        serial++; var tcc = "inst-name-full-" + item.CampusID;
                        <tr data-id="@item.CampusID">
                            <td>@serial</td>
                            <td class="@tcc">@item.CampuseName</td>
                            <td>@item.Zone?.ZoneName</td>
                            <td>@item.Institution?.InstitutionName</td>
                            <td>@item.AffiliationNo</td>
                            <td>@item.SchoolCode</td>
                             <td>@item.CampusType?.CampusTypeName</td>
                            <td>@(item.Status == 1 ? "Active" : "Inactive")</td>
                            <td class="text-nowrap">
                                <div class="col-md-12 text-center">
                                    <!-- Edit Button -->
                                    <button class="btn btn-sm btn-icon" data-bs-toggle="offcanvas" data-bs-target="#editCampusOffcanvas_@item.CampusID">
                                        <i class="ri-edit-box-line ri-20px"></i>
                                    </button>

                                    <!-- Edit Partial -->
                                  @*   @await Html.PartialAsync("~/Pages/Campus/_EditCampusOffcanvasPartial.cshtml", new
                                         {
                                             Campus = item,
                                            Institutions = Model.Institutions,
                                            Zones = Model.Zones,
                                            Statuses = Model.Statuses,
                                            CampusTypes = Model.CampusTypes

                                        }) *@

                                    <!-- Delete Button -->
                                    <form method="post" id="deleteCampusForm-@item.CampusID" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.CampusID" />
                                        <button type="button" class="btn btn-sm btn-icon" onclick="showDeleteConfirmation('@item.CampusID')">
                                            <i class="ri-delete-bin-7-line ri-20px"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-header pb-0">
            <h5 class="card-title mb-0">Manage Campus</h5>
        </div>
        <div class="card-datatable table-responsive">
            <table id="CampusTable" class="table">
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Campus Name</th>
                        <th>Zone</th>
                        <th>Institution</th>
                        <th>Affiliation No</th>
                        <th>School Code</th>
                        <th>Campus Type</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="9" class="text-center">No data available in table</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}
