@model SchoolWebApp.Pages.Class.IndexModel

<!-- Modal Form -->
<div class="modal fade" id="addClassModal" tabindex="-1" aria-labelledby="addClassModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="addClassForm" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="addClassModalLabel">Add Class Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <!-- Hidden Fields -->
                    <input type="hidden" name="InstitutionID" id="ModalInstitutionID" />
                    <input type="hidden" name="CampusID" id="ModalCampusID" />

                    <!-- Board Dropdown -->
                    <div class="mb-3">
                        <label for="ModalBoardID" class="form-label text-primary">Select Board</label>
                        <select class="form-select" id="ModalBoardID" name="BoardID"  onchange="fetchMasterClasses(this.value)"  required>
                           
                            @await Component.InvokeAsync("Master", new { viewname = "Boards" })
                        </select>
                       
                    </div>

                    <!-- Master Classes Section -->
                    <div id="masterClassesContainer" class="mt-3">
                        <p class="text-muted">Select a board to view associated stages and classes.</p>
                      
                        
                    </div>
                   
                    <div class="fv-help-block invalid-feedback" id="selectedMasterClassIDsValidationMessage"></div>
                </div>

                <div class="modal-footer">
                  @*   <button type="button" class="btn btn-success" onclick="submitAddClassesForm()">Save</button> *@
                    <button type="submit" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
