                        <div class="d-flex align-items-center">
                            @* <h4 class="mb-1 me-2">@Model.TotalUserCount</h4> *@
                            <p class="text-primary mb-1">(+100%)</p>
                        </div>
                        <small class="mb-0">Total Users</small>
                    </div>
                    <div class="avatar">
                        <div class="avatar-initial bg-label-primary rounded">
                            <div class="ri-user-line ri-26px"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @* Verified Users *@
    <div class="col-sm-6 col-xl-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div class="me-1">
                        <p class="text-heading mb-1">Verified Users</p>
                        <div class="d-flex align-items-center">
                            @*  <h4 class="mb-1 me-2">@Model.VerifiedUserCount</h4> *@
                            <p class="text-success mb-1">( +@ViewData["VerifiedUsersPercentage"]% )</p>
                        </div>
                        <small class="mb-0">Recent analytics</small>
                    </div>
                    <div class="avatar">
                        <div class="avatar-initial bg-label-success rounded">
                            <div class="ri-user-follow-line ri-26px"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @* Duplicate Users *@
    <div class="col-sm-6 col-xl-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div class="me-1">
                        <p class="text-heading mb-1">Duplicate Users</p>
                        <div class="d-flex align-items-center">
                            @* <h4 class="mb-1 me-2">@Model.DuplicateUserCount</h4> *@
                            <p class="text-danger mb-1">( +@ViewData["DuplicateUsersPercentage"]% )</p>
                        </div>
                        <small class="mb-0">Recent analytics</small>
                    </div>
                    <div class="avatar">
                        <div class="avatar-initial bg-label-danger rounded">
                            <div class="ri-group-line ri-26px"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @* Unverified Users *@
    <div class="col-sm-6 col-xl-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div class="me-1">
                        <p class="text-heading mb-1">Unverified Users</p>
                        <div class="d-flex align-items-center">
                            @*  <h4 class="mb-1 me-2">@Model.UnverifiedUserCount</h4> *@
                            <p class="text-warning mb-1">( +@ViewData["UnverifiedUsersPercentage"]% )</p>
                        </div>
                        <small class="mb-0">Recent analytics</small>
                    </div>
                    <div class="avatar">
                        <div class="avatar-initial bg-label-warning rounded">
                            <div class="ri-user-search-line ri-26px"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid">
    <h1 class="mb-4">Zone Management</h1>

    <!-- DataTable -->
    <div class="card">
        <div class="card-header pb-0">
            <h5 class="card-title mb-0">Search Filter</h5>
            
        </div>
        <div class="card-datatable table-responsive">
            <table id="ZoneTable" class="table">
                <thead>
                    <tr>
                        <th>ZoneID</th>
                        <th>Zone Name</th>
                        <th>ZGUID</th>
                        <th>Institution</th>
                        <th>Short Code</th>
                        <th>Status</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Zones != null && Model.Zones.Any())
                    {
                        @foreach (var zone in Model.Zones)
                        {
                            <tr data-id="@zone.ZoneID">
                                <td>@zone.ZoneID</td>
                                <td>@zone.ZoneName</td>
                                <td>@zone.ZGUID</td>
                                <td>@(zone.Institution?.InstitutionName ?? "N/A")</td>
                                <td>@zone.ShortCode</td>
                                <td>@Html.Raw(PageHelpers.GetStatusBadge(zone.Status))</td>
                                <td>@zone.CreatedDate.ToString("dd-MM-yyyy")</td>
                                <td class="text-nowrap">
                                    <div class="col-md-12 text-center">
                                        <button class="btn btn-sm btn-icon"
                                                data-bs-toggle="offcanvas"
                                                data-bs-target="#editZoneOffcanvas_@zone.ZoneID">
                                            <i class="ri-edit-box-line ri-20px"></i>
                                        </button>
                                        <form method="post" id="deleteZoneForm-@zone.ZoneID" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@zone.ZoneID" />
                                            <button type="button" class="btn btn-sm btn-icon"
                                                    onclick="showDeleteConfirmation('@zone.ZoneID')">
                                                <i class="ri-delete-bin-7-line ri-20px"></i>
                                            </button>
                                        </form>
                                        <div class="btn-group d-inline">
                                            <button type="button" class="btn btn-sm btn-icon dropdown-toggle hide-arrow"
                                                    data-bs-toggle="dropdown">
                                                <i class="ri-more-2-line ri-20px"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li><a class="dropdown-item" href="/Admin/ViewInstitution?id=@zone.InstitutionID">View</a></li>
                                                <li><a class="dropdown-item" href="/Admin/SuspendInstitution?id=@zone.InstitutionID">Suspend</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center">
                                @(Model.Zones == null ? "Zones data is null" : "No zones available")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Create Offcanvas -->
    @await Html.PartialAsync("~/Pages/Zone/Create.cshtml", Model)

    <!-- Edit Offcanvas for Each Zone -->
    @if (Model.Zones != null && Model.Zones.Any())
    {
        @foreach (var zone in Model.Zones)
        {

            @await Html.PartialAsync("~/Pages/Zone/Edit.cshtml", new 
{
    Zone = zone,
    Zones = Model.Zones
})
        }
    }
</div>