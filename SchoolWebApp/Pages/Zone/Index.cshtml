@page
@using SchoolWebApp
@model SchoolWebApp.Pages.Zone.IndexModel
@{
    ViewData["Title"] = "Zone Management";
}
@section VendorStyles
{
    <link rel="stylesheet" href="~/vendor/libs/datatables-bs5/datatables.bootstrap5.dist.css">
    <link rel="stylesheet" href="~/vendor/libs/datatables-responsive-bs5/responsive.bootstrap5.dist.css">
    <link rel="stylesheet" href="~/vendor/libs/datatables-buttons-bs5/buttons.bootstrap5.dist.css">
    <link rel="stylesheet" href="~/vendor/libs/sweetalert2/sweetalert2.dist.css" />
    <link rel="stylesheet" href="~/vendor/libs/&#64;form-validation/form-validation.dist.css" />
}

@section VendorScripts
{
    <script src="~/vendor/libs/moment/moment.dist.js"></script>
    <script src="~/vendor/libs/datatables-bs5/datatables-bootstrap5.dist.js"></script>
    <script src="~/vendor/libs/sweetalert2/sweetalert2.dist.js"></script>
    <script src="~/vendor/libs/&#64;form-validation/popular.dist.js"></script>
    <script src="~/vendor/libs/&#64;form-validation/bootstrap5.dist.js"></script>
    <script src="~/vendor/libs/&#64;form-validation/auto-focus.dist.js"></script>
    <script src="~/vendor/libs/cleavejs/cleave.dist.js"></script>
    <script src="~/vendor/libs/cleavejs/cleave-phone.dist.js"></script>
}
@section PageScripts {
    <script src="~/code_js/zone-crud.js"></script>
}

<div class="container-fluid">
    <h2 class="mb-4">Zone Management</h2>
    <!-- DataTable -->
    <div class="card">
        <div class="card-datatable table-responsive">
            <table id="ZoneTable" class="table">
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Zone Name</th>
                        <th>Institution</th>
                        <th>Short Code</th>
                        <th>Status</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Zones != null && Model.Zones.Any())
                    {
                        var kk = 0;
                        @foreach (var zone in Model.Zones)
                        {
                            kk = kk + 1; var tcc = "zone-name-full-" + zone.ZoneID;
                            <tr data-id="@zone.ZoneID">
                                <td> @kk</td>
                                <td class="@tcc">@zone.ZoneName</td>
                                <td>@(zone.Institution?.InstitutionName ?? "N/A")</td>
                                <td>@zone.ShortCode</td>
                                <td>@Html.Raw(PageHelpers.GetStatusBadge(zone.Status))</td>
                                <td>@zone.CreatedDate.ToString("dd MMM yyyy")</td>
                                @*  <td class="text-nowrap">
                                    <div class="col-md-12 text-center"> *@
                                <td class="text-nowrap">
                                    <div>
                                        <button class="btn btn-sm btn-icon"
                                                data-bs-toggle="offcanvas"
                                                data-bs-target="#editZoneOffcanvas"
                                                onclick="editZone(@zone.ZoneID)">
                                            <i class="ri-edit-box-line ri-20px"></i>
                                        </button>
                                        <div class="offcanvas offcanvas-end" tabindex="-1" id="editZoneOffcanvas" aria-labelledby="editZoneOffcanvasLabel">
                                            <div class="offcanvas-header">
                                                <h5 id="editZoneOffcanvasLabel" class="offcanvas-title">Edit Zone</h5>
                                                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                                            </div>
                                            <div class="offcanvas-body">
                                                <div id="editFormContainer"></div>
                                            </div>
                                        </div>
                                        <form method="post" id="deleteZoneForm-@zone.ZoneID" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@zone.ZoneID" />
                                            <button type="button" class="btn btn-sm btn-icon"
                                                    onclick="showDeleteConfirmation('@zone.ZoneID')">
                                                <i class="ri-delete-bin-7-line ri-20px"></i>
                                            </button>
                                        </form>
                                        @*   <div class="btn-group d-inline">
                                            <button type="button" class="btn btn-sm btn-icon dropdown-toggle hide-arrow"
                                                    data-bs-toggle="dropdown">
                                                <i class="ri-more-2-line ri-20px"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li><a class="dropdown-item" href="/Admin/ViewInstitution?id=@zone.InstitutionID">View</a></li>
                                                <li><a class="dropdown-item" href="/Admin/SuspendInstitution?id=@zone.InstitutionID">Suspend</a></li>
                                            </ul>
                                        </div> *@
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Create Offcanvas -->
    @await Html.PartialAsync("~/Pages/Zone/_Create.cshtml")

</div>