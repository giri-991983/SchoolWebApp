}

<div class="container-fluid">
    <h2 class="mb-4">Zone Management</h2>
    <!-- DataTable -->
    <div class="card">      
        <div class="card-datatable table-responsive">
            <table id="ZoneTable" class="table">
                <thead>
                    <tr>                         
                        <th>Zone Name</th>                      
                        <th>Institution</th>
                        <th>Short Code</th>
                        <th>Status</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Zones != null && Model.Zones.Any())
                    {
                        @foreach (var zone in Model.Zones)
                        {
                            <tr data-id="@zone.ZoneID">                                     
                                <td>@zone.ZoneName</td>                             
                                <td>@(zone.Institution?.InstitutionName ?? "N/A")</td>
                                <td>@zone.ShortCode</td>
                                <td>@Html.Raw(PageHelpers.GetStatusBadge(zone.Status))</td>
                                <td>@zone.CreatedDate.ToString("dd-MM-yyyy")</td>
                                <td class="text-nowrap">
                                    <div class="col-md-12 text-center">
                                        <button class="btn btn-sm btn-icon"
                                                data-bs-toggle="offcanvas"
                                                data-bs-target="#editZoneOffcanvas_@zone.ZoneID">
                                            <i class="ri-edit-box-line ri-20px"></i>
                                        </button>
                                        <form method="post" id="deleteZoneForm-@zone.ZoneID" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@zone.ZoneID" />
                                            <button type="button" class="btn btn-sm btn-icon"
                                                    onclick="showDeleteConfirmation('@zone.ZoneID')">
                                                <i class="ri-delete-bin-7-line ri-20px"></i>
                                            </button>
                                        </form>
                                      @*   <div class="btn-group d-inline">
                                            <button type="button" class="btn btn-sm btn-icon dropdown-toggle hide-arrow"
                                                    data-bs-toggle="dropdown">
                                                <i class="ri-more-2-line ri-20px"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li><a class="dropdown-item" href="/Admin/ViewInstitution?id=@zone.InstitutionID">View</a></li>
                                                <li><a class="dropdown-item" href="/Admin/SuspendInstitution?id=@zone.InstitutionID">Suspend</a></li>
                                            </ul>
                                        </div> *@
                                    </div>
                                </td>                              
                            </tr>
                        }
                    }                   
                </tbody>
            </table>
        </div>
    </div>

    <!-- Create Offcanvas -->
  
    @await Html.PartialAsync("~/Pages/Zone/_Create.cshtml") 

